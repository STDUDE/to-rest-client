<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travel.torest"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/to_rest"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.SlidingMenu"
            android:icon="@mipmap/to_rest"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.CountriesActivity_"
            android:label="@string/title_activity_countries"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.travel.torest.screens.SlidingMenu" />
        </activity>
        <activity
            android:name=".screens.ResortsActivity_"
            android:label="@string/title_activity_resorts"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.travel.torest.screens.SlidingMenu" />
        </activity>
        <activity
            android:name=".screens.HotelsActivity_"
            android:label="@string/title_activity_hotels"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.travel.torest.screens.SlidingMenu" />
        </activity>
    </application>
</manifest>