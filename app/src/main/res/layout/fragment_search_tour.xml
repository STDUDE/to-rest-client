<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travel.torest.fragments.SearchTourFragment">

    <requestFocus
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="42dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:minHeight="50dp"
                android:baselineAligned="false"
                android:id="@+id/DestinationLayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/BeginDestinationLayout"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="1.5dp"
                    android:background="@color/ListBlockBackground"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/FromTV"
                        android:id="@+id/FromTV"
                        android:layout_weight="1"
                        android:textIsSelectable="false"
                        android:phoneNumber="false"
                        android:editable="false"
                        android:typeface="monospace"
                        android:textSize="10sp"
                        android:gravity="top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/BeginDestinationTV"
                        android:id="@+id/BeginDestinationTV"
                        android:textColor="@color/MediumTextColor"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/EndDestinationLayout"
                    android:background="@color/ListBlockBackground"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/WhereTV"
                        android:id="@+id/WhereTV"
                        android:layout_weight="1"
                        android:textIsSelectable="false"
                        android:phoneNumber="false"
                        android:editable="false"
                        android:typeface="monospace"
                        android:textSize="10dp"
                        android:gravity="top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/EndDestinationTV"
                        android:id="@+id/EndDestinationTV"
                        android:textColor="@color/MediumTextColor"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/DestinationLayout"
                android:layout_alignParentLeft="true"
                android:minHeight="47dp"
                android:id="@+id/ResortLayout"
                android:padding="5dp"
                android:paddingLeft="3dp"
                android:clickable="true"
                android:soundEffectsEnabled="false"
                android:showDividers="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ResortTV"
                    android:textIsSelectable="false"
                    android:phoneNumber="false"
                    android:editable="false"
                    android:typeface="monospace"
                    android:textSize="10dp"
                    android:gravity="top"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/ResortListTV"
                    android:id="@+id/ResortTV"
                    android:textColor="@color/MediumTextColor"
                    android:textStyle="bold"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ResortLayout"
                android:layout_centerHorizontal="true"
                android:minHeight="3dp"
                android:background="@color/ListBlockBackground"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:minHeight="47dp"
                android:layout_below="@+id/ResortLayout"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:paddingLeft="3dp"
                android:id="@+id/HotelLayout"
                android:baselineAligned="false"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/HotelTV"
                    android:textIsSelectable="false"
                    android:phoneNumber="false"
                    android:editable="false"
                    android:typeface="monospace"
                    android:textSize="10dp"
                    android:gravity="top"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/HotelListTV"
                    android:id="@+id/HotelTV"
                    android:textColor="@color/MediumTextColor"
                    android:textStyle="bold"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:baselineAligned="false"
                android:id="@+id/CategoriesLayout"
                android:layout_below="@+id/HotelLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/HotelCategoryLayout"
                    android:layout_weight="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="1.5dp"
                    android:background="@color/ListBlockBackground"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/HotelCategoryTV"
                        android:layout_weight="1"
                        android:textIsSelectable="false"
                        android:phoneNumber="false"
                        android:editable="false"
                        android:typeface="monospace"
                        android:textSize="10dp"
                        android:gravity="top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/HotelCategoryListTV"
                        android:id="@+id/HotelCategoryTV"
                        android:textColor="@color/MediumTextColor"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/SupplyLayout"
                    android:background="@color/ListBlockBackground"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SupplyTV"
                        android:layout_weight="1"
                        android:textIsSelectable="false"
                        android:phoneNumber="false"
                        android:editable="false"
                        android:typeface="monospace"
                        android:textSize="10dp"
                        android:gravity="top" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/SupplyListTV"
                        android:id="@+id/SupplyTV"
                        android:textColor="@color/MediumTextColor"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CategoriesLayout"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/linearLayout"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/DeparturePeriodTV"
                    android:id="@+id/DeparturePeriodTV"
                    android:textIsSelectable="false"
                    android:phoneNumber="false"
                    android:editable="false"
                    android:typeface="monospace"
                    android:textSize="10dp"
                    android:gravity="top" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:id="@+id/DeparturePeriodLayout"
                android:minHeight="50dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:id="@+id/BeginDestDateLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="c"
                        android:id="@+id/textView4"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:id="@+id/BeginDestDay"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="40dp"
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DayNumberTextColor" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="month"
                            android:id="@+id/BeginDestMonth" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="year"
                                android:id="@+id/BeginDestYear"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginRight="3dp"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="года"
                                android:id="@+id/textView8"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/textView7" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:id="@+id/EndDestDateLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="по"
                        android:id="@+id/textView9"
                        android:gravity="center_vertical"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:id="@+id/EndDestDay"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="40dp"
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DayNumberTextColor" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="month"
                            android:id="@+id/EndDestMonth" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="year"
                                android:id="@+id/EndDestYear"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginRight="3dp"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="года"
                                android:id="@+id/textView13"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/EndDestYear" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/linearLayout2"
                android:layout_below="@+id/DeparturePeriodLayout"
                android:layout_centerHorizontal="true"
                android:background="@color/ListBlockBackground"
                android:paddingTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/NumberOfNightsTV"
                    android:id="@+id/NumberOfNightsTV"
                    android:textIsSelectable="false"
                    android:phoneNumber="true"
                    android:textSize="10dp"
                    android:typeface="monospace"
                    android:gravity="top" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:id="@+id/NumberOfNightsLayout"
                android:minHeight="50dp"
                android:background="@color/ListBlockBackground"
                android:gravity="center_vertical|center_horizontal">

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/NumberOfNightsSB"
                    android:layout_weight="1"
                    android:indeterminate="false"
                    android:max="25" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NumberOfNightsLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/TouristsLayout"
                style="@style/PrimaryTheme.Block"
                android:gravity="center"
                android:transitionGroup="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/TouristsTV"
                    android:id="@+id/TouristsTV"
                    android:textColor="@color/TouristTextColor"
                    android:typeface="monospace"
                    android:textSize="10dp"
                    android:gravity="top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/TNamesLayout"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/MansTV"
                            android:id="@+id/MansTV"
                            android:textColor="@color/TouristTextColor"
                            android:textStyle="bold"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/ManCountTV"
                            android:id="@+id/ManCountTV"
                            android:textColor="@color/TouristTextColor"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/KidsTV"
                            android:id="@+id/KidsTV"
                            android:textColor="@color/TouristTextColor"
                            android:textStyle="bold"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/KidCountTV"
                            android:id="@+id/KidCountTV"
                            android:textColor="@color/TouristTextColor"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TButtonLayout"
                    android:minHeight="50dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ManButton"
                            android:layout_weight="1"
                            android:src="@mipmap/icon_man_normal"
                            android:background="@color/TouristBackground" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ManButton2"
                            android:layout_weight="1"
                            android:src="@mipmap/icon_man_normal"
                            android:background="@color/TouristBackground" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ManButton3"
                            android:layout_weight="1"
                            android:src="@mipmap/icon_man_normal"
                            android:background="@color/TouristBackground" />

                        <ImageButton
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ManButton4"
                            android:layout_weight="1"
                            android:src="@mipmap/icon_man_normal"
                            android:background="@color/TouristBackground" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@color/ListBlockBackground"
                        android:minWidth="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp">

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/KidAgeTV1"
                                android:textSize="10dp"
                                android:textIsSelectable="false"
                                android:textColor="@color/TouristTextColor" />

                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/KidButton1"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_kid_normal"
                                android:background="@color/TouristBackground" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView"
                                android:textSize="10dp"
                                android:textIsSelectable="false"
                                android:textColor="@color/TouristTextColor" />

                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/KidButton2"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_kid_normal"
                                android:background="@color/TouristBackground" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView2"
                                android:textSize="10dp"
                                android:textIsSelectable="false"
                                android:textColor="@color/TouristTextColor" />

                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/KidButton3"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_kid_normal"
                                android:background="@color/TouristBackground" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView3"
                                android:textSize="10dp"
                                android:textIsSelectable="false"
                                android:textColor="@color/TouristTextColor" />

                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/KidButton4"
                                android:layout_weight="1"
                                android:src="@mipmap/icon_kid_normal"
                                android:background="@color/TouristBackground" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TouristsLayout"
                android:layout_centerHorizontal="true"
                android:padding="8dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/SearchTourButton"
                    android:id="@+id/SearchTourButton"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/MediumTextColor"
                    style="@style/AppTheme.NoActionBar.Button"
                    android:textColorHighlight="@color/LittleTextColor"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
