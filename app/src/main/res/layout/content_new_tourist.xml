<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.travel.torest.screens.NewTouristActivity"
    tools:showIn="@layout/activity_new_tourist">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/PrimaryBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ПЕРСОНАЛЬНЫЕ ДАННЫЕ"
                android:id="@+id/textView23"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/PrimaryDark"
                android:autoText="false"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="КАТЕГОРИЯ"
                android:id="@+id/textView15"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/AgeCategoryGroup">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/KidCategory"
                        android:checked="true"
                        android:clickable="false"
                        android:buttonTint="@color/ButtonBackground"
                        android:singleLine="false"
                        android:backgroundTint="@color/PrimaryLight"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/add_tourist_radio_button_inactive"
                        android:allowUndo="false"
                        android:breakStrategy="simple" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:background="@drawable/add_tourist_man"
                        android:backgroundTint="@color/PrimaryLight"
                        android:layout_alignParentEnd="false"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ManCategory"
                        android:checked="false"
                        android:clickable="false"
                        android:allowUndo="false"
                        android:contextClickable="false"
                        android:enabled="true"
                        android:buttonTint="@color/ButtonBackground"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/add_tourist_radio_button_inactive" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:background="@mipmap/icon_kid_selected_normal"
                        android:backgroundTint="@color/PrimaryLight"
                        android:layout_alignParentEnd="false"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ИМЯ"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/TouristFirstName"
                android:layout_gravity="center_horizontal"
                android:hint="Введите имя" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ФАМИЛИЯ"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/TouristSecondName"
                android:layout_gravity="center_horizontal"
                android:hint="Введите фамилию" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ДАТА РОЖДЕНИЯ"
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/TouristBDate"
                android:layout_gravity="center_horizontal"
                android:hint="01.01.1990" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ПОЛ"
                android:id="@+id/textView22"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/GenderGroup">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ManGender"
                        android:checked="true"
                        android:clickable="false"
                        android:buttonTint="@color/ButtonBackground"
                        android:singleLine="false"
                        android:backgroundTint="@color/PrimaryLight"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/add_tourist_radio_button_inactive" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView5"
                        android:background="@drawable/add_tourist_man"
                        android:backgroundTint="@color/PrimaryLight"
                        android:layout_alignParentEnd="false"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/WomanGender"
                        android:checked="false"
                        android:clickable="false"
                        android:allowUndo="false"
                        android:contextClickable="false"
                        android:enabled="true"
                        android:buttonTint="@color/ButtonBackground"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/add_tourist_radio_button_inactive" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView6"
                        android:background="@drawable/add_tourist_woman"
                        android:backgroundTint="@color/PrimaryLight"
                        android:layout_alignParentEnd="false"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ПАССПОРТНЫЕ ДАННЫЕ"
                android:id="@+id/textView24"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/PrimaryDark"
                android:autoText="false"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ГРАЖДАНСТВО"
                android:id="@+id/textView16"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Nationality"
                android:text="Беларусь" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="СЕРИЯ"
                android:id="@+id/textView22"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/TouristPassportSeria"
                android:layout_gravity="center_horizontal"
                android:hint="АА" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="НОМЕР"
                android:id="@+id/textView22"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/TouristPassportNumber"
                android:layout_gravity="center_horizontal"
                android:hint="0000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="КЕМ ВЫДАН"
                android:id="@+id/textView22"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/IssuedBy"
                android:layout_gravity="center_horizontal"
                android:hint="Кем выдан" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="КОГДА ВЫДАН"
                android:id="@+id/textView22"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/BeginDate"
                android:layout_gravity="center_horizontal"
                android:hint="Введите дату выдачи" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ДЕЙСТВИТЕЛЕН ДО"
                android:id="@+id/textView22"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/MediumTextColor"
                android:autoText="false"
                android:layout_margin="5dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/EndDate"
                android:layout_gravity="right"
                android:hint="Введите срок действия" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ОТПРАВИТЬ"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                style="@style/AppTheme.NoActionBar.Button"
                android:layout_margin="8dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
